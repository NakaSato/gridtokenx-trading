# =============================================================================
# GridTokenX Trading - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# DO NOT commit .env files with sensitive data to version control
# =============================================================================
# === App Configuration ===
NEXT_PUBLIC_TIMEZONE=UTC

# -----------------------------------------------------------------------------
# Mapbox Configuration (for Energy Grid Map visualization)
# -----------------------------------------------------------------------------
# Get your token from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# -----------------------------------------------------------------------------
# Solana Network Configuration
# -----------------------------------------------------------------------------
# Network options: localnet, devnet, testnet, mainnet-beta
NEXT_PUBLIC_SOLANA_NETWORK=localnet

# RPC URL for Solana network
# - Localnet: http://localhost:8899
# - Devnet: https://api.devnet.solana.com
# - Mainnet: https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_RPC_URL=http://localhost:8899

# WebSocket URL for Solana network
# - Localnet: ws://localhost:8900
# - Devnet: wss://api.devnet.solana.com
# - Mainnet: wss://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_WS_URL=ws://localhost:8900

# -----------------------------------------------------------------------------
# API Gateway Configuration
# -----------------------------------------------------------------------------
# Base URL for the GridTokenX API Gateway
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# WebSocket base URL for real-time updates
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8080

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable debug mode (shows additional console logs)
NEXT_PUBLIC_ENABLE_DEBUG=true

# Show developer tools in the UI
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
